<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/report_date"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:visibility="visible"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/pie_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_orange_light"
        android:text="get pie chart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please input as YYYY-MM-DD format"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/holo_orange_dark" />

    <EditText
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="start date"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_green_light" />

    <EditText
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="end date"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_green_light" />

    <Button
        android:id="@+id/bar_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/holo_orange_light"
        android:fontFamily="sans-serif-light"
        android:text="get bar chart" />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        />
</LinearLayout>
</ScrollView>