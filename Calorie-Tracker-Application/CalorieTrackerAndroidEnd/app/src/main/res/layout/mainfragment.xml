<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Calorie Tracker"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:fontFamily="sans-serif-light" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        app:fontFamily="sans-serif-light" />

    <ImageView
        android:id="@+id/home_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentTime"
        android:src="@drawable/food" />

    <TextView
        android:id="@+id/setGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_img"
        android:text="Set your Goal Calorie"
        android:textColor="@android:color/holo_green_light"
        app:fontFamily="sans-serif-light"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/goal_txt"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setGoal"
        android:gravity="center"
        android:textColor="@android:color/holo_green_light"
        app:fontFamily="sans-serif-light" />

    <Button
        android:id="@+id/saveGoal"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal_txt"
        android:text="Save"
        android:textColor="@android:color/holo_orange_light"
        app:fontFamily="sans-serif-light"
        android:textSize="24sp" />

</LinearLayout>